<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <!-- Skip link for keyboard navigation and screen readers -->
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <div class="frame-wrapper">

    <div class="page-content">

      <div id="wrapper">

        <!-- Wrap in semantic header if not already done inside the partial -->
        <header>
          <%- include('../partials/header') %>
        </header>

        <!-- Add aria-label for screen reader clarity -->
        <nav aria-label="Main navigation">
          <%- include('../partials/navigation') %>
        </nav>

        <!-- Main content starts here with accessible ID -->
        <main id="main-content">
          <%- body %>
        </main>

        <!-- Semantic footer wrapper -->
        <footer>
          <%- include('../partials/footer') %>
        </footer>

      </div>

    </div>

  </div>
</body>
</html>
