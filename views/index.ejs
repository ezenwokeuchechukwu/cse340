<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <!-- Main content starts here -->
    <header>
      <%- include('./partials/header') %>
      <%- include('./partials/navigation') %>
    </header>

    <!-- Hero Banner Section -->
    <section class="main-banner">
      <div class="banner-text">
        <h1>Welcome to CSE Motors</h1>
        <p>Your dream car is just a click away</p>
        <a href="#featured-cars" class="cta-button">Browse Cars</a> <!-- Updated link to scroll to the featured section -->
      </div>
    </section>

    <!-- Featured Cars Section -->
    <section class="featured-cars" id="featured-cars"> <!-- Added ID for anchor link -->
      <div class="container">
        <h2>Featured Cars</h2>
        <div class="car-grid">
          <div class="car-item">
            <img src="/images/vehicles/camaro.jpg" alt="Luxury Sedan">
            <p>Luxury Sedan</p>
          </div>
          <div class="car-item">
            <img src="/images/vehicles/batmobile.jpg" alt="Sports Coupe">
            <p>Sports Coupe</p>
          </div>
          <div class="car-item">
            <img src="/images/vehicles/adventador.jpg" alt="Family SUV">
            <p>Family SUV</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer Section -->
    <footer>
      <%- include('./partials/footer') %>
    </footer>
  </body>
</html>
