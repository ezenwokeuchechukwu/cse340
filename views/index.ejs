<!-- Main Content -->
<section>
	<section class="welcome-section">
		<h1>Welcome to CSE Motors!</h1>
    <%- messages() %>

		<div class="delorean-intro">
			<div class="delorean-image">
				<img src="/images/vehicles/delorean.jpg" alt="Image of DMC Delorean" />
			</div>
			<div class="delorean-details">
				<h3>DMC Delorean</h3>
				<ul>
					<li>3 Cup holders</li>
					<li>Superman doors</li>
					<li>Fuzzy dicel</li>
				</ul>
				<button class="own-today-btn">Own Today</button>
			</div>
		</div>
	</section>

	<div class="desktop">
		<section class="reviews-section">
			<h3>DMC Delorean Reviews</h3>
			<ul>
				<li>"So fast it's almost like traveling in time." (4/5)</li>
				<li>"Coolest ride on the road." (4/5)</li>
				<li>"I'm feeling McFly!" (5/5)</li>
				<li>"The most futuristic ride of our day." (4.5/5)</li>
				<li>"80's livin and I love it!" (5/5)</li>
			</ul>
		</section>

		<section class="upgrades-section">
			<h3>Delorean Upgrades</h3>
			<div class="upgrades-grid">
				<div class="upgrade-item">
					<div class="upgrade-card">
						<img
							src="/images/upgrades/flux-cap.png"
							alt="Image of Flux Capacitor"
						/>
					</div>
					<a href="#">Flux Capacitor</a>
				</div>
				<div class="upgrade-item">
					<div class="upgrade-card">
						<img src="/images/upgrades/flame.jpg" alt="Image of Flame Decals" />
					</div>
					<a href="#">Flame Decals</a>
				</div>
				<div class="upgrade-item">
					<div class="upgrade-card">
						<img
							src="/images/upgrades/bumper_sticker.jpg"
							alt="Image of Bumper Stickers"
						/>
					</div>
					<a href="#">Bumper Stickers</a>
				</div>
				<div class="upgrade-item">
					<div class="upgrade-card">
						<img src="/images/upgrades/hub-cap.jpg" alt="Image of Hub Caps" />
					</div>
					<a href="#">Hub Caps</a>
				</div>
			</div>
		</section>
	</div>
</section>
